{
  "name": "digm-monorepo",
  "private": true,
  "version": "0.0.1",
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:Cphayim/digm.git",
  "license": "ISC",
  "packageManager": "pnpm@7.0.0",
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "pnpm": "^7.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm -y",
    "prepare": "husky install",
    "clean": "pnpm -r exec rimraf dist *.tsbuildinfo",
    "dev": "pnpm -r --parallel dev",
    "dev:pg": "pnpm --filter playground dev",
    "build": "pnpm -r build",
    "test": "exit 0;",
    "lint": "eslint packages/*/src/**.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write --parser typescript"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ombro/eslint-config-typescript": "^0.1.0",
    "@ombro/eslint-config-vue3-typescript": "^0.1.0",
    "@ombro/logger": "^1.5.5",
    "@ombro/ts-config": "^1.4.0",
    "@types/node": "^17.0.23",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.12.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "vite": "^3.0.3",
    "vite-plugin-css-injected-by-js": "^2.0.2",
    "vite-plugin-dts": "^1.4.0",
    "vue": "^3.2.33",
    "vue-router": "^4.0.15",
    "vue-tsc": "^0.39.0"
  }
}
