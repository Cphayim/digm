{
  "name": "monorepo-boilerplate",
  "private": true,
  "version": "0.0.0",
  "author": "unknown",
  "license": "UNLICENSED",
  "packageManager": "pnpm@6.28.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm -y",
    "prepare": "husky install",
    "clean": "pnpm -r exec rimraf dist *.tsbuildinfo",
    "build": "pnpm -r build",
    "test": "exit 0;",
    "lint": "eslint packages/*/src/**.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write --parser typescript"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ombro/eslint-config-typescript": "^0.1.0",
    "@ombro/logger": "^1.5.5",
    "@ombro/ts-config": "^1.4.0",
    "@types/node": "^17.0.23",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.12.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  }
}
